<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:layout_margin="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/clock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/record_orange"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"
            />

        <TextView
            android:id="@+id/label_accident_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accident_location"
            android:layout_margin="6dp"
            />

        <TextView
            android:id="@+id/tv_accident_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_accident_location"
            android:layout_margin="6dp"
            tools:text="广州市天河区"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/clock"
            />

        <TextView
            android:id="@+id/label_accident_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accident_pay"
            android:layout_margin="6dp"
            android:layout_below="@+id/label_accident_location"
            />

        <TextView
            android:id="@+id/tv_accident_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_accident_pay"
            android:layout_below="@+id/label_accident_location"
            android:layout_margin="6dp"
            tools:text="232323.00元"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
            />
        <TextView
            android:id="@+id/tv_accident_responsibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_below="@+id/label_accident_pay"
            tools:text="造成三级伤残，应负：全责"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/tv_accident_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_accident_responsibility"
            android:layout_below="@+id/label_accident_pay"
            android:layout_margin="6dp"
            android:gravity="right"
            tools:text="2016.02.11"
            />
        <ImageView
            android:id="@+id/item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
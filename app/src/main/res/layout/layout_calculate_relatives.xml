<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_family_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/label_family_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/family_consume"
                android:textSize="16sp" />

            <View
                android:id="@+id/line_family_custom"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/label_family_custom"
                android:background="@drawable/line_vertical" />


            <TextView
                android:id="@+id/tv_family_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/line_family_custom"
                android:gravity="center"
                android:text="点击添加"
                android:textSize="16sp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recview_relatives_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_add_relatives"
            android:padding="8dp"
            android:background="#ef4f8b"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/tv_add_relatives"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/relative_should_care"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:layout_toLeftOf="@+id/iv_add_relatives"
                    android:layout_marginRight="6dp"
                    />

                <ImageView
                    android:id="@+id/iv_add_relatives"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/add"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
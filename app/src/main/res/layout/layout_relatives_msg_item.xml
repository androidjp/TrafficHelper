<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageButton
        android:id="@+id/ibtn_fail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/fail"
        android:scaleType="centerInside"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="3dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="11dp" />
    <com.androidjp.lib_custom_view.edittext.ClearEditText
        android:id="@+id/cet_age"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="输入年龄（1~55）"
        android:layout_marginStart="23dp"
        app:layout_constraintLeft_toRightOf="@+id/ibtn_fail"
        android:layout_marginLeft="23dp"
        app:layout_constraintRight_toLeftOf="@+id/jsv_relatives_msg"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent" />
    <com.androidjp.lib_custom_view.selector.JPSelectView
        android:id="@+id/jsv_relatives_msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="6dp" />

</android.support.constraint.ConstraintLayout>